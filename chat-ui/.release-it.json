{
  "git": {
    "commitArgs": ["-a"],
    "commitMessage": "Release chat-ui v${version}",
    "tag": false,
    "push": true,
    "pushRepo": "upstream",
    "tagName": "chat-ui-v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "releaseName": "chat-ui-v${version}",
    "draft": true,
    "autoGenerate": true,
    "release": true
  },
  "hooks": {
    "before:init": [
      "pushd ../chat-core && npm i && npm run build && popd",
      "npm run build:component",
      "npm run lint"
    ]
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "package.json",
        "path": ["dependencies.mongodb-rag-core"]
      }
    }
  }
}
