{
 "compilerOptions": {
   "target": "ES2022",
   "module": "NodeNext",
   "moduleResolution": "NodeNext",
   "outDir": "./build",
   "rootDir": "./src",
   "strict": true,
   "esModuleInterop": true,
   "skipLibCheck": true,
   "forceConsistentCasingInFileNames": true,
   "allowSyntheticDefaultImports": true,
   "moduleDetection": "force"
 },
 "include": ["src/**/*"],
 "exclude": ["node_modules"]
}